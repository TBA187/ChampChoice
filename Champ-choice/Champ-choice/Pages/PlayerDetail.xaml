<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Champ_choice.Pages.PlayerDetail">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Thanks for voting on: " FontSize="16" TextColor="DarkBlue" />
            <Label Text="{Binding playerName}" FontSize="16" TextColor="DarkBlue" />
            <Label Text="With player number: " FontSize="16" TextColor="DarkBlue" />
            <Label Text="{Binding playerNr}" FontSize="16" TextColor="DarkBlue" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>